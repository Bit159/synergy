<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="userSQL">

	<select id="selectAll" resultType="userDTO">
		SELECT * FROM db.usertable
	</select>

	<insert id="insertMatch" parameterType="matchDTO">
		insert into db.match values(#{email}, #{x}, #{y}, #{range})
	</insert>





	<select id="selectOne" parameterType="java.lang.String"	resultType="userDTO">
		SELECT * FROM db.usertable WHERE id=#{id}
	</select>

	<insert id="insert" parameterType="userDTO">
		INSERT INTO db.usertable(`id`, `pw`, `nickname`, `email`, `birthyear`) values(#{id}, #{password}, #{nickname}, #{email}, #{birthyear})
	</insert>
	


	<update id="update" parameterType="userDTO">
		update db.usertable set `id`=#{id}, `pw`=#{pw}, `nickname`=#{nickname}, `birthyear`=#{birthyear} where `email`=#{email}
	</update>

	<delete id="delete" parameterType="userDTO">
		DELETE FROM db.usertable WHERE `email`=#{email}
	</delete>


	<select id="searchUserList" parameterType="java.util.Map" resultType="userDTO">
		<!-- select * from usertable where ${key} like '%'||#{value}||'%' -->
		select * from usertable where
		<if test="key == 'name'">
			name like '%'||#{value}||'%'
		</if>
		<if test="key == 'id'">
			id like '%'||#{value}||'%'
		</if>
	</select>

</mapper>


