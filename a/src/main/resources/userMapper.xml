<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="userSQL">

	<select id="selectAllFromUsertable" resultType="userDTO">
		SELECT * FROM db.usertable
	</select>

	<select id="selectAllFromMatch" resultType="matchDTO">
		SELECT * FROM db.match
	</select>

	<insert id="insertMatch" parameterType="matchDTO">
		INSERT INTO db.match VALUES(#{email}, #{x}, #{y}, #{range})
	</insert>
	<insert id="crawlInsert" parameterType="java.util.list">
		INSERT INTO db.cboard(`title`, `nickname`, `boarddate`)
		<foreach collection="list" item="item" separator="OR">
		 	VALUES(#{title}, #{nickname}, now())
		 </foreach>
	</insert>

	<delete id="deleteMatched" parameterType="java.util.List">
		DELETE FROM db.match
		<where>
			<foreach collection="list" item="item" separator="OR">
				(`email`=#{item.email} AND `x`=#{item.x} AND `y`=#{item.y} AND `range`=#{item.range})
			</foreach>
		</where>
	</delete>

	<select id="selectOne" parameterType="java.lang.String"
		resultType="userDTO">
		SELECT * FROM db.usertable WHERE id=#{id}
	</select>

	<insert id="insert" parameterType="userDTO">
		INSERT INTO db.usertable(`id`,
		`pw`, `nickname`, `email`, `birthyear`) values(#{id}, #{password},
		#{nickname}, #{email}, #{birthyear})
	</insert>



	<update id="update" parameterType="userDTO">
		update db.usertable set
		`id`=#{id}, `pw`=#{pw}, `nickname`=#{nickname},
		`birthyear`=#{birthyear} where `email`=#{email}
	</update>

	<delete id="delete" parameterType="userDTO">
		DELETE FROM db.usertable WHERE
		`email`=#{email}
	</delete>


	<select id="searchUserList" parameterType="java.util.Map"
		resultType="userDTO">
		<!-- select * from usertable where ${key} like '%'||#{value}||'%' -->
		select * from usertable where
		<if test="key == 'name'">
			name like '%'||#{value}||'%'
		</if>
		<if test="key == 'id'">
			id like '%'||#{value}||'%'
		</if>
	</select>

</mapper>


