<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="boardSQL">
  	
  	<!-- 목록 -->
	<select id="getBoardList" parameterType="java.util.Map" resultType="boardDTO">
		<![CDATA[
		select * from
		(select rownum rn, tt.* from
		(select * from db.cboard order by bno desc)tt
		)where rn>=#{startNum} and rn<=#{endNum} 
		]]>
	</select>
	
	<select id="getBoardList1" resultType="board.CBoardDTO">
		select * from db.cboard 
	</select>
		
	<!-- 총글수 -->
	<select id="getBoardTotalA" resultType="int">
		select count(*) from db.cboard
	</select>
	
	<!-- 크롤링 보드 체크용 -->
	<select id="getCBoardList" resultType="board.CBoardDTO">
		SELECT * 
		FROM db.cboard 
		ORDER BY bno desc 
		
		LIMIT 0,20
	</select>
	<!-- 크롤링 보드 체크용 -->
	
	<!-- 크롤링 보드 페이징 -->
	<select id="getCBoardList1" parameterType="board.Pagination" resultType="board.CBoardDTO">
		SELECT * 
		FROM db.cboard 
		<trim prefix="WHERE" prefixOverrides="AND|OR">

			<if test="searchType=='title' and keyword != null and keyword != '' ">

				AND title like CONCAT('%', #{keyword}, '%')

			</if>

			<if test="searchType=='nickname' and keyword != null and keyword != '' ">

				AND nickname like CONCAT('%', #{keyword}, '%')

			</if>	

		</trim>
		ORDER BY bno desc
		LIMIT #{startList},#{listSize};
	</select>
	<!-- 크롤링 보드 페이징 -->
  	
  	<!-- 크롤링 보드 게시글 정보 -->
  	<select id="getCBoard" parameterType="int" resultType="board.CBoardDTO">
  		SELECT * from db.cboard where bno=#{bno}
  	</select>
  	<!-- 크롤링 보드 게시글 정보 -->
  	
  	<!-- 크롤링 보드 댓글  목록 -->
  	<select id="getCBoardReplyList" parameterType="int" resultType="board.CBoardReplyDTO">
  		select * from db.reply where bno=#{bno} order by bno desc 
  	</select>
  	<!-- 크롤링 보드 댓글  -->
  	
  	<!-- 크롤링 보드 댓글 생성 -->
  	<insert id="boardReply" parameterType="java.util.Map">
  		<!-- begin -->
  			insert into db.reply (bno, reply, nickname, replydate, updatedate) values(#{bno}, #{reply}, #{nickname}, #{now}, #{now});
  			
  			<!-- update db.cboard set reply=reply+1 where bno=#{bno}; -->
  		<!-- end; -->
  	</insert>	
  	<!-- 크롤링 보드 댓글 생성 -->
  	
  	<!-- 크롤링 보드 댓글수 증가 -->
  	<update id="replyUpdate" parameterType="int">
  		update db.cboard set replys=replys+1 where bno=#{bno}
  	</update>
  	<!-- 크롤링 보드 댓글수 증가 -->
  	
  	<!-- 조회수 증가 -->
  	<update id="hitUpdate" parameterType="int">
  		update db.cboard set hit=hit+1 where bno=#{bno}
  	</update>
  	<!-- 조회수 증가 -->
  	
  	<!-- 크롤링 보드 댓글 삭제 -->
  	<delete id="replyDelete" parameterType="int">
  		delete from db.reply where rno=#{rno}
  	</delete>
  	<!-- 크롤링 보드 댓글 삭제 -->
  	
  	<!-- 크롤링 보드 댓글수 감소 -->
  	<update id="replyDeleteUpdate" parameterType="int">
  		update db.cboard set replys=replys-1 where bno = #{bno}
  	</update>
  	<!-- 크롤링 보드 댓글수 감소 -->
  	
  	<!-- 크롤링 보드 댓글 생성 -->
  	<insert id="replyWrite" parameterType="java.util.Map" >
  		insert into db.reply (bno, reply, nickname, replydate, updatedate) values(#{bno}, #{reply}, #{nickname}, #{now}, #{now});
  	</insert>
  	<!-- 크롤링 보드 댓글 생성 -->
  	
  	<!--  크롤링 보드 댓글 수정 -->
  	<update id="replyModify" parameterType="java.util.Map">
  		update db.reply set reply = #{reply} where rno = #{rno}
  	</update>
  	<!--  크롤링 보드 댓글 수정 -->
  	
  	<!-- 게시글 총 개수 -->
  	<select id="getBoardListCnt" resultType="int">
		SELECT count(*) as listCnt 
		FROM db.cboard
		<trim prefix="WHERE" prefixOverrides="AND|OR">

			<if test="keyword != null and keyword != '' ">
	
				<if test="searchType=='title'">
	
					AND title like CONCAT('%', #{keyword}, '%')
	
				</if>
	
				<if test="searchType=='nickname'">
	
					AND nickname like CONCAT('%', #{keyword}, '%')
	
				</if>
	
	      </if>
	
		</trim>
		
		
	</select>
	<!-- 게시글 총 개수 -->
	
	<!-- 게시글 총 개수 -->
  	<select id="getBoardListCnt1" resultType="int">
		SELECT count(*) as listCnt 
		FROM db.cboard
		<trim prefix="WHERE" prefixOverrides="AND|OR">

			<if test="keyword != null and keyword != '' ">
	
				<if test="searchType=='title'">
	
					AND TITLE like CONCAT('%', #{keyword}, '%')
	
				</if>
	
				<if test="searchType=='nickname'">
	
					AND nickname like CONCAT('%', #{keyword}, '%')
	
				</if>
	
	      </if>
	
		</trim>
		
		
	</select>
	<!-- 게시글 총 개수 -->
  	
  </mapper>