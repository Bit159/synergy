<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="boardSQL">
  	
  	<!-- 목록 -->
	<select id="getBoardList" parameterType="java.util.Map" resultType="boardDTO">
		<![CDATA[
		select * from
		(select rownum rn, tt.* from
		(select * from db.cboard order by bno desc)tt
		)where rn>=#{startNum} and rn<=#{endNum} 
		]]>
	</select>
	
	<select id="getBoardList1" resultType="board.CBoardDTO">
		select * from db.cboard 
	</select>
		
	<!-- 총글수 -->
	<select id="getBoardTotalA" resultType="int">
		select count(*) from db.cboard
	</select>
	
	<!-- 크롤링 보드 체크용 -->
	<select id="getCBoardList" resultType="board.CBoardDTO">
		SELECT * FROM db.cboard order by bno desc limit 20
	</select>
	<!-- 크롤링 보드 체크용 -->
  	
  	<!-- 크롤링 보드 게시글 정보 -->
  	<select id="getCBoard" parameterType="int" resultType="board.CBoardDTO">
  		SELECT * from db.cboard where bno=#{bno}
  	</select>
  	<!-- 크롤링 보드 게시글 정보 -->
  	
  	<!-- 크롤링 보드 댓글  -->
  	<select id="getCBoardReplyList" parameterType="int" resultType="board.CBoardReplyDTO">
  		select * from db.reply where bno=#{bno} order by bno desc 
  	</select>
  	<!-- 크롤링 보드 댓글  -->
  	
  </mapper>