<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:security="http://www.springframework.org/schema/security"
	xsi:schemaLocation="http://www.springframework.org/schema/security https://www.springframework.org/schema/security/spring-security-5.2.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<security:http use-expressions="true">
		<security:intercept-url pattern="/synergy/member/loginForm" access="permitAll" />
		<security:intercept-url pattern="/synergy/member/welcome" access="hasAnyRole('USER, ADMIN')" />
		<security:form-login 
			login-page="/synergy/member/loginForm" 
			default-target-url="/synergy/member/login" 
			authentication-failure-url="/login/loginForm.do?error" 
			username-parameter="id" 
			password-parameter="password"/>
		<security:logout 
		    logout-success-url="/synergy/member/loginForm"/>
	</security:http>
	<security:authentication-manager>
		<security:authentication-provider>
			<security:user-service>
				<security:user name="user" password="{noop}password" authorities="ROLE_USER" />
				<security:user name="admin" password="{noop}123" authorities="ROLE_ADMIN" />
			</security:user-service>
		</security:authentication-provider>
	</security:authentication-manager>
</beans>
